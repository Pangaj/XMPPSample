<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_record_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:textSize="18sp"
        android:text="My Recording"
        android:textColor="@color/black"
        android:layout_above="@+id/tv_record_time"/>

    <TextView
        android:id="@+id/tv_record_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_30"
        android:textSize="18sp"
        android:text="00:25"
        android:layout_above="@+id/iv_record_mic"/>

    <ImageView
        android:id="@+id/iv_record_mic"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_record_mic" />

        <LinearLayout
            android:background="@color/cardview_dark_background"
            android:id="@+id/ll_play_pause"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_play_pause"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_play" />

            <TextView
                android:id="@+id/tv_play_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="@string/start"
                android:textSize="18sp"
                android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>